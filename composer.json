{
	"name":        "pxn/phputils",
	"description": "PHP Utilities Library",
	"type":        "library",
	"homepage":    "https://poixson.com",
	"license":     "GPL-3.0",
	"keywords": [
		"framework", "utilities"
	],
	"support": {
		"source": "https://git.poixson.com/summary/pxn!phpUtils.git",
		"issues": "https://git.poixson.com/tickets/pxn!phpUtils.git",
		"irc":    "irc://irc.esper.net/poixson",
		"discord": "https://discord.gg/jHgP2a3kDx"
	},
	"authors": [{
		"name": "lorenzop",
		"role": "Developer"
	}],
	"autoload": {
		"psr-4": {
			"pxn\\phpUtils\\": "src/"
		},
		"files": [
			"src/init.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"pxn\\phpUtils\\tests\\": "tests/"
		}
	},
	"archive": {
		"exclude": [
			"tests/",
			"examples/"
		]
	},
	"suggest": {
		"51systems/doctrine-encrypt": "*"
	},
	"require": {
		"ext-mbstring": "*",
		"php": ">=8.0",
		"pxn/composerlocaldev": "*"
	},
	"require-dev": {
		"filp/whoops": "*",
		"kint-php/kint": "*",
		"phpunit/phpunit": "*"
	}
}
